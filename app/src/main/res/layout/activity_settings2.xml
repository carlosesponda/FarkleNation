<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.espon.farklecoach.SettingsActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Set Special Numbers"
            android:id="@+id/SpecialNumbersText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="10000"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/WinTotalInput"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/SpecialNumbersText"
            android:layout_toRightOf="@+id/WinTotalText"
            android:layout_toEndOf="@+id/WinTotalText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Point total needed to win"
            android:id="@+id/WinTotalText"
            android:layout_alignTop="@+id/WinTotalInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total needed for first bank"
            android:id="@+id/FirstBankText"
            android:layout_below="@+id/WinTotalInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="500"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/FirstBankInput"
            android:layout_below="@+id/WinTotalInput"
            android:layout_alignLeft="@+id/WinTotalInput"
            android:layout_alignStart="@+id/WinTotalInput" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total needed for each bank"
            android:id="@+id/EachBankText"
            android:layout_below="@+id/FirstBankInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/EachBankInput"
            android:layout_below="@+id/FirstBankInput"
            android:layout_alignLeft="@+id/FirstBankInput"
            android:layout_alignStart="@+id/FirstBankInput" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Special Numbers"
            android:id="@+id/resetSpecialButton"
            android:layout_below="@+id/EachBankInput"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Set Scoring Values"
            android:id="@+id/ScoringValuesText"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/resetSpecialButton"
            android:layout_alignLeft="@+id/SpecialNumbersText"
            android:layout_alignStart="@+id/SpecialNumbersText" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="100"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/OneOneInput"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ScoringValuesText"
            android:layout_toRightOf="@+id/ThreeOnesText"
            android:layout_toEndOf="@+id/ThreeOnesText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="A one"
            android:id="@+id/OneOneText"
            android:layout_alignTop="@+id/OneOneInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="A five"
            android:id="@+id/OneFiveText"
            android:layout_below="@+id/OneOneInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="50"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/OneFiveInput"
            android:layout_below="@+id/OneOneInput"
            android:layout_alignLeft="@+id/OneOneInput"
            android:layout_alignStart="@+id/OneOneInput" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="300"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/ThreeOnesInput"
            android:layout_below="@+id/OneFiveInput"
            android:layout_toRightOf="@+id/ThreeOnesText"
            android:layout_toEndOf="@+id/ThreeOnesText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Three of a kind(1)"
            android:id="@+id/ThreeOnesText"
            android:layout_alignTop="@+id/ThreeOnesInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Three of a kind(2)"
            android:id="@+id/ThreeTwosText"
            android:layout_below="@+id/ThreeOnesInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="200"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/ThreeTwosInput"
            android:layout_below="@+id/ThreeOnesInput"
            android:layout_alignLeft="@+id/ThreeOnesInput"
            android:layout_alignStart="@+id/ThreeOnesInput" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Three of a kind(3)"
            android:id="@+id/ThreeThreesText"
            android:layout_below="@+id/ThreeTwosInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="300"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/ThreeThreesInput"
            android:layout_below="@+id/ThreeTwosInput"
            android:layout_toRightOf="@+id/ThreeThreesText"
            android:layout_toEndOf="@+id/ThreeThreesText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Three of a kind(4)"
            android:id="@+id/ThreeFoursText"
            android:layout_below="@+id/ThreeThreesInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="400"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/ThreeFoursInput"
            android:layout_below="@+id/ThreeThreesInput"
            android:layout_toRightOf="@+id/ThreeFoursText"
            android:layout_toEndOf="@+id/ThreeFoursText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Three of a kind(5)"
            android:id="@+id/ThreeFivesText"
            android:layout_below="@+id/ThreeFoursInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="500"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/ThreeFivesInput"
            android:layout_below="@+id/ThreeFoursInput"
            android:layout_toRightOf="@+id/ThreeFivesText"
            android:layout_toEndOf="@+id/ThreeFivesText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Three of a kind(6)"
            android:id="@+id/ThreeSixsText"
            android:layout_below="@+id/ThreeFivesInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="600"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/ThreeSixsInput"
            android:layout_below="@+id/ThreeFivesInput"
            android:layout_toRightOf="@+id/ThreeSixsText"
            android:layout_toEndOf="@+id/ThreeSixsText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Four of a kind"
            android:id="@+id/FourText"
            android:layout_below="@+id/ThreeSixsInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1000"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/FourInput"
            android:layout_below="@+id/ThreeSixsInput"
            android:layout_alignLeft="@+id/ThreeSixsInput"
            android:layout_alignStart="@+id/ThreeSixsInput"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Five of a kind"
            android:id="@+id/FiveText"
            android:layout_below="@+id/FourInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="2000"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/FiveInput"
            android:layout_below="@+id/FourInput"
            android:layout_alignLeft="@+id/FourInput"
            android:layout_alignStart="@+id/FourInput" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Six of a kind"
            android:id="@+id/SixText"
            android:layout_below="@+id/FiveInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="3000"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/SixInput"
            android:layout_below="@+id/FiveInput"
            android:layout_alignLeft="@+id/FiveInput"
            android:layout_alignStart="@+id/FiveInput" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Three Pairs"
            android:id="@+id/PairsText"
            android:layout_below="@+id/SixInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1500"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/PairsInput"
            android:layout_below="@+id/SixInput"
            android:layout_alignLeft="@+id/SixInput"
            android:layout_alignStart="@+id/SixInput" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Two Triplets"
            android:id="@+id/TripletsText"
            android:layout_below="@+id/PairsInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="2500"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/TripletsInput"
            android:layout_below="@+id/PairsInput"
            android:layout_alignLeft="@+id/PairsInput"
            android:layout_alignStart="@+id/PairsInput" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1-6 Straight"
            android:id="@+id/StraightText"
            android:layout_below="@+id/TripletsInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1500"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/StraightInput"
            android:layout_below="@+id/TripletsInput"
            android:layout_alignLeft="@+id/TripletsInput"
            android:layout_alignStart="@+id/TripletsInput" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Scoring Values"
            android:id="@+id/resetSpecialButton2"
            android:layout_below="@+id/StraightInput"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>